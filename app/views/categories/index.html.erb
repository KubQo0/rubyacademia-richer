<h1><%= t '.header' %></h1>

<div id="categories">
  <% @categories.each do |category| %>
    <%= link_to category, class: 'text-black link-underline link-underline-opacity-0' do %>
      <%= render category %>
    <% end %>
  <% end %>
</div>

<div class="d-grid fixed-bottom p-4">
  <%= link_to t('.log'), new_category_path, class: "btn btn-primary py-3 rounded-pill shadow fs-6 fw-7"%>
</div>